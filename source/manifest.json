{
  "name": "Preview It",
  "description": "a chrome extension to preview pages in popup small window",
  "version": "0.750",
  "icons": { "16": "logo16.png",
           "48": "logo48.png",
          "128": "logo128.png" },
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "background",
    "webRequest",
    "webRequestBlocking"
  ], 
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["main.css"],
      "js": ["jquery.min.js", "class.js", "main.js"]
      // "all_frames": true
    }
  ],
  "web_accessible_resources": ["jquery.min.js", "class.js", "main.js", "loading.gif", "move.svg", "close.svg", "menu.svg", "share.svg"],
  "manifest_version": 2
}
